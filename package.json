{
  "engines": {
    "composer": "^0.16.3"
  },
  "name": "decentralized-finance-network",
  "version": "0.0.1",
  "description": "Hyperleder Fabric with Angular 5",
  "author": "Jeroen Ouwehand",
  "scripts": {
    "prepublish": "mkdirp ./dist && composer archive create --sourceType dir --sourceName . -a ./dist/decentralized-finance-network.bna",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.conf",
    "test-inner": "mocha --recursive && cucumber-js",
    "test-cover": "nyc npm run test-inner",
    "test": "mocha --recursive -t 4000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeroenouw/HyperledgerFabricAngular.git"
  },
  "keywords": [
    "composer",
    "composer-network"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "browserfs": "^1.4.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "composer-admin": "^0.19.0",
    "composer-cli": "^0.19.0",
    "composer-client": "^0.19.0",
    "composer-connector-embedded": "^0.19.0",
    "composer-cucumber-steps": "^0.19.0",
    "cucumber": "^4.1.0",
    "eslint": "^4.19.1",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "license-check": "^1.1.5",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.5",
    "moment": "^2.22.0",
    "nyc": "^11.6.0"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./client/**/*",
      "!./out/**/*",
      "!./scripts/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "features/**",
      "out/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
